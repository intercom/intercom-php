{
    "name": "Intercom API (Conversation)",
    "description": "The Intercom API (Conversation)",
    "operations": {
        "createMessage": {
            "httpMethod": "POST",
            "parameters": {
                "message_type": {
                    "location": "json",
                    "required": false,
                    "type": "string"
                },
                "subject": {
                    "location": "json",
                    "required": false,
                    "type": "string"
                },
                "body": {
                    "location": "json",
                    "required": false,
                    "type": "string"
                },
                "template": {
                    "location": "json",
                    "required": false,
                    "type": "string"
                },
                "from": {
                    "location": "json",
                    "required": false,
                    "type": "object",
                    "properties": {
                        "type": {
                            "location": "json",
                            "type": "string"
                        },
                        "id": {
                            "location": "json",
                            "type": "string"
                        },
                        "user_id": {
                            "location": "json",
                            "type": "string"
                        },
                        "email": {
                            "location": "json",
                            "type": "string"
                        }
                    }
                },
                "to": {
                    "location": "json",
                    "required": false,
                    "type": "object",
                    "properties": {
                        "type": {
                            "location": "json",
                            "type": "string"
                        },
                        "id": {
                            "location": "json",
                            "type": "string"
                        },
                        "user_id": {
                            "location": "json",
                            "type": "string"
                        },
                        "email": {
                            "location": "json",
                            "type": "string"
                        }
                    }
                }
            },
            "responseClass": "MessageModel",
            "responseType": "model",
            "summary": "Creates a new conversation",
            "uri": "/messages"
        },
        "getConversation": {
            "httpMethod": "GET",
            "parameters": {
                "id": {
                    "location": "uri",
                    "required": true,
                    "type": "string"
                }
            },
            "responseClass": "ConversationModel",
            "responseType": "model",
            "summary": "Gets a conversation by ID",
            "uri": "/conversations/{id}"
        },
        "getConversations": {
            "extends": "_abstract_pagination_page",
            "httpMethod": "GET",
            "parameters": {
                "type": {
                    "location": "query",
                    "required": true,
                    "static": true,
                    "default": "user"
                },
                "id": {
                    "location": "query",
                    "required": false,
                    "type": "string"
                },
                "user_id": {
                    "location": "query",
                    "required": false,
                    "type": "string"
                },
                "intercom_user_id": {
                    "location": "query",
                    "required": false,
                    "type": "string"
                },
                "email": {
                    "location": "query",
                    "required": false,
                    "type": "string"
                },
                "unread": {
                    "location": "query",
                    "required": false,
                    "type": "boolean"
                },
                "open": {
                    "location": "query",
                    "required": false,
                    "type": "boolean"
                }
            },
            "responseClass": "ConversationListModel",
            "responseType": "model",
            "summary": "Gets conversations",
            "uri": "/conversations"
        },
        "replyToConversation": {
            "httpMethod": "POST",
            "parameters": {
                "id": {
                    "location": "uri",
                    "required": true,
                    "type": "string"
                },
                "email": {
                    "location": "json",
                    "required": false,
                    "type": "string"
                },
                "type": {
                    "default": "json",
                    "location": "query",
                    "required": true,
                    "static": true
                },
                "body": {
                    "location": "json",
                    "required": false,
                    "type": "string"
                },
                "message_type": {
                    "location": "json",
                    "required": false,
                    "type": "string"
                }
            },
            "responseClass": "ConversationModel",
            "responseType": "model",
            "summary": "Reply to Conversation",
            "uri": "/conversations/{id}/reply"
        },
        "markConversationAsRead": {
            "httpMethod": "PUT",
            "parameters": {
                "id": {
                    "location": "uri",
                    "required": true,
                    "type": "string"
                },
                "read": {
                    "location": "json",
                    "default": true,
                    "required": false,
                    "type": "boolean"
                }
            },
            "responseClass": "ConversationModel",
            "responseType": "model",
            "summary": "Reply to Conversation",
            "uri": "/conversations/{id}"
        }
    },
    "models": {
        "MessageModel": {
            "type": "object",
            "properties": {
                "type": {
                    "location": "json",
                    "type": "string"
                },
                "id": {
                    "location": "json",
                    "type": "string"
                },
                "owner": {
                    "location": "json",
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string"
                        },
                        "email": {
                            "type": "string"
                        },
                        "id": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "body": {
                    "location": "json",
                    "type": "string"
                },
                "subject": {
                    "location": "json",
                    "type": "string"
                },
                "message_type": {
                    "location": "json",
                    "type": "string"
                },
                "template": {
                    "location": "json",
                    "type": "string"
                },
                "created_at": {
                    "location": "json",
                    "type": "integer",
                    "format": "timestamp"
                }
            }
        },
        "ConversationModel": {
            "type": "object",
            "properties": {
                "conversation_message": {
                    "location": "json",
                    "type": "object",
                    "$ref": "MessageModel"
                },
                "assignee": {
                    "location": "json",
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string"
                        },
                        "id": {
                            "type": "string"
                        }
                    }
                },
                "created_at": {
                    "location": "json",
                    "format": "timestamp",
                    "type": "integer"
                },
                "updated_at": {
                    "location": "json",
                    "format": "timestamp",
                    "type": "integer"
                },
                "id": {
                    "location": "json",
                    "type": "string"
                },
                "open": {
                    "location": "json",
                    "type": "boolean"
                },
                "read": {
                    "location": "json",
                    "type": "boolean"
                },
                "user": {
                    "location": "json",
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string"
                        },
                        "id": {
                            "type": "string"
                        }
                    }
                },
                "conversation_parts": {
                    "type": "array",
                    "location": "json",
                    "$ref": "ConversationPartListModel"
                }
            }
        },
        "ConversationListModel": {
            "type": "object",
            "properties": {
                "conversations": {
                    "type": "array",
                    "location": "json",
                    "items": {
                        "$ref": "ConversationModel"
                    }
                }
            }
        },
        "ConversationPartModel": {
            "type": "object",
            "properties": {
                "body": {
                    "location": "json",
                    "type": "string"
                },
                "part_type": {
                    "location": "json",
                    "type": "string"
                },
                "author": {
                    "location": "json",
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string"
                        },
                        "id": {
                            "type": "string"
                        }
                    }
                },
                "assigned_to": {
                    "location": "json",
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string"
                        },
                        "id": {
                            "type": "string"
                        }
                    }
                },
                "created_at": {
                    "location": "json",
                    "format": "timestamp",
                    "type": "integer"
                },
                "updated_at": {
                    "location": "json",
                    "format": "timestamp",
                    "type": "integer"
                },
                "notified_at": {
                    "location": "json",
                    "format": "timestamp",
                    "type": "integer"
                }
            }
        },
        "ConversationPartListModel": {
            "type": "object",
            "properties": {
                "parts": {
                    "type": "array",
                    "location": "json",
                    "items": {
                        "$ref": "ConversationPartModel"
                    }
                }
            }
        }
    }
}
