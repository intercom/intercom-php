{
    "name": "intercom/intercom-php",
    "description": "Intercom API client built on top of HTTPlug",
    "keywords": [
        "api",
        "guzzle",
        "intercom",
        "intercom.io"
    ],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Intercom Platform Team",
            "homepage": "https://www.intercom.com"
        }
    ],
    "support": {
        "issues": "https://github.com/intercom/intercom-php/issues",
        "source": "https://github.com/intercom/intercom-php"
    },
    "autoload": {
        "psr-4": {
            "Intercom\\": [
                "src"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Intercom\\Test\\": [
                "tests"
            ]
        }
    },
    "require": {
        "php": ">= 7.1",
        "ext-json": "*",
        "php-http/client-common": "^1.9 || ^2.0",
        "php-http/client-implementation": "^1.0",
        "php-http/discovery": "^1.4",
        "php-http/httplug": "^1.0 || ^2.0",
        "php-http/message": "^1.7",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "meta/guzzle-adapter": "^6.0 || ^7.0",
        "phpunit/phpunit": "^7.5 || ^8.5 || ^9.3",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "repositories": [
        {
            "type": "package",
            "package": [
                {
                    "name": "meta/guzzle-adapter",
                    "version": "7.0",
                    "type": "metapackage",
                    "require": {
                        "php-http/guzzle7-adapter": "^0.1.1"
                    }
                },
                {
                    "name": "meta/guzzle-adapter",
                    "version": "6.0",
                    "type": "metapackage",
                    "require": {
                        "php-http/guzzle6-adapter": "^1.0 || ^2.0"
                    }
                }
            ]
        }
    ],
    "config": {
        "sort-packages": true
    }
}
